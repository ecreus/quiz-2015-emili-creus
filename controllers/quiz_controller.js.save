//autoload -factoriza el c√≤digo di la rutaa incluye :quizId
exports.load = function (req,res,next,quizId) {

	models.Quiz.find(quizId).then(
	   function(quiz) {
		if (quiz){
		 req.quiz=quiz;
		 next();
		} else { next ( new Error('No existe quizId ='+ quizId));}
	}
	).catch(function(error) { next(error);});
}; 



